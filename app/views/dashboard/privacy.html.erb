<main>
    <section id="memee">
        <%=render "dashboard/sidebar" %>
        <div id="guide" class="main_side">
            <div id="top_header">
                <div class="left_blk">
                    <h1>Guidelines</h1>
                    <div class="img">
                        <img src="<%= asset_path("icon-guide.svg")%>" alt="">
                    </div>
                </div>
                <div class="side">
                    <button type="button" class="btn bell_btn">
                        <img src="<%= asset_path("icon-bell.svg")%>" alt="">
                        <span>2</span>
                    </button>
                </div>
            </div>
            <div class="inner_blk">
                <div class="wrapper ex">
                    <nav class="nav_list">
                        <ul class="list">
                            <li><a href="/terms">Terms & Conditions</a></li>
                            <li class="active"><a href="/privacy">Privacy Policy</a></li>
                            <li><a href="/faqs">FAQs</a></li>
                            <li><a href="/pop-ups">Pop Ups</a></li>
                        </ul>
                    </nav>
                    <div class="content_blk">
                        <div class="btn_blk justify-content-end mb-5">
                            <a href="/privacy-edit" class="site_btn prime_btn round">Update</a>
                        </div>
                        <h6>Privacy and Policies</h6>
                        <div class="rules">
                            <%= @privacy.description.html_safe %>
                        </div>
                    </div>
                    <div class="history">
                        <h5>History</h5>
                        <ul class="htry_list">
                            <li>
                                <% if Privacy.first.updated_at != Privacy.first.created_at? %>
                                    <p>Privacy &amp; Policy - Updated!</p>
                                    <p class="time"><%= Privacy.first.updated_at.strftime("%F") %></p>
                                    <hr>
                                <% end %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>