                                <div class="form_blk">
                                    <textarea class="input" rows="10" placeholder="Start typing here....."></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="btn_blk">
                            <button type="button" class="site_btn prime_btn round px pop_btn"
                                data-popup="notify_confirm">Send Now</button>
