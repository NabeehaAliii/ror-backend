<main>
    <section id="memee">
        <%=render "dashboard/sidebar" %>
        <div id="dashboard" class="main_side">
            <div id="top_header">
              <% if admin_user_signed_in? %>
                Logged in as <strong><%= current_admin_user.email %></strong>.
              <% else %>
                <%= link_to "Sign up", new_admin_user_registration_path, :class => 'navbar-link'  %> |
                <%= link_to "Login", new_admin_user_session_path, :class => 'navbar-link'  %>
              <% end %>
              <div class="left_blk">
                    <h1>Hi <%= current_admin_user.admin_user_name%> </h1>
                    <div class="img">
                        <img src="<%= asset_path("Emoji-hand.svg")%>" alt="">
                    </div>
                </div>
                <div class="side">
                    <div class="form_blk input round_input ">
                        <button class="btn">
                            <img src="<%= asset_path("Search.svg")%>" alt="">
                        </button>
                        <input class="input" type="text" name="" id="" placeholder="Search">
                    </div>
                    <button type="button" class="btn bell_btn">
                        <img src="<%= asset_path("icon-bell.svg")%>" alt="">
                        <span>2</span>
                    </button>
                </div>
            </div>
            <div class="inside">
                <div class="upper_row">
                    <div class="row">
                        <div class="col-8">
                            <div class="left_blk">
                                <div class="outter">
                                    <h4>Users Activity ReportðŸ’¡</h4>
                                    <div class="chart_img">
                                        <img src="<%= asset_path("dummy-img.png")%>" alt="">
                                    </div>
                                    <div class="item_row row">
                                        <div class="col-3 p-0">
                                            <div class="dash_item border_right">
                                                <div class="top">
                                                    <div class="icon"><img src="<%= asset_path("user-icon.svg")%>" alt="">
                                                    </div>
                                                    <span>Total Users</span>
                                                </div>
                                                <div class="txt">
                                                    <span><%= User.all.count %></span>
                                                    <div class="line_outer">
                                                        <div class="line bg-1"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3 p-0">
                                            <div class="dash_item border_right">
                                                <div class="top">
                                                    <div class="icon"><img src="<%= asset_path("active-user-icon.svg")%>"
                                                            alt="">
                                                    </div>
                                                    <span>Active Users</span>
                                                </div>
                                                <div class="txt">
                                                    <span>743</span>
                                                    <div class="line_outer">
                                                        <div class="line bg-2"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3 p-0">
                                            <div class="dash_item border_right">
                                                <div class="top">
                                                    <div class="icon"><img src="<%= asset_path("inactive-icon.svg")%>" alt="">
                                                    </div>
                                                    <span>Inactive Users</span>
                                                </div>
                                                <div class="txt">
                                                    <span>29K</span>
                                                    <div class="line_outer">
                                                        <div class="line bg-3"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3 p-0">
                                            <div class="dash_item">
                                                <div class="top">
                                                    <div class="icon"><img src="<%= asset_path("activity-icon.svg")%>" alt="">
                                                    </div>
                                                    <span>Activity %</span>
                                                </div>
                                                <div class="txt">
                                                    <span>17%</span>
                                                    <div class="line_outer">
                                                        <div class="line bg-4"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="right_blk">
                                <div class="btn_blk">
                                    <button class="site_btn pop_btn w-100" data-popup="btn_disable">
                                        Edit Daily Coin Reward
                                    </button>
                                </div>
                                <div class="outter">
                                    <h4>Users Spendings</h4>
                                    <div class="chart">
                                        <div class="fig">
                                            <img src="<%= asset_path("chart.svg")%>" alt="">
                                        </div>
                                        <span>$6479</span>
                                        <a href="/transactions" class="btn_blk">
                                            <button class="site_btn">View All Transactions</button>
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bottom_row">
                    <div class="row">
                        <div class="col-8">
                            <div class="left_blk">
                                <div class="outter">
                                    <h4 class="mb-4">Posts report</h4>
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="post_blk">
                                                <div class="icon">
                                                    <img src="<%= asset_path("earning-icon.svg")%>" alt="">
                                                </div>
                                                <h4><%= Post.all.count %></h4>
                                                <div class="bottom">
                                                    <span>Total Posts</span>
                                                    <div class="ico_blk">
                                                        <span class="light">18%</span>
                                                        <div class="icon">
                                                            <img src="<%= asset_path("up-arrow.svg")%>" alt="">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-9">
                                            <div class="graph_pic">
                                                <img src="<%= asset_path("graph-img.jpg")%>" alt="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="right_blk">
                                <div class="outter">
                                    <div class="all_user">
                                        <div class="top">
                                            <h4 class="">Latest Users</h4>
                                            <a href="/user-list">See all</a>
                                        </div>
                                        <% @user.each do |user| %>
                                            <div class="body">
                                                <div class="users_row d-inline-flex">
                                                    <div class="user p-2">
                                                        <div class="ellipse">
                                                            <img src="<%= user.profile_image.attached? ? user_details.profile_image.blob.url : asset_path("table-profile.svg")%>" alt="">
                                                        </div>
                                                        <span><%=user.username%></span>
                                                    </div>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="popup" data-popup="btn_disable" id="coin_reward_modal">
            <div class="table_dv">
                <div class="table_cell">
                    <div class="contain">
                        <div class="_inner">
                            <button type="button" class="x_btn"></button>
                            <h4>Daily Coin Reward For Judging</h4>
                            <div class="btn_blk">
                                <button class="site_btn bg_dark round">
                                50
                                </button>
                            </div>
                            <div class="btn_blk">
                                <button class="site_btn bg_yellow round">
                                Save
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

